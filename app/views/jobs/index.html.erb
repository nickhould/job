<h1>mtl.jobs</h1>
<h2>marketing and communication job in montreal</h2>

<ul>
  <% @jobs.each do |job| %>
  <li>
    <%= job.published_at.strftime('%m/%d/%Y') if job.published_at %>
    <strong><%= link_to job.title, job.url %></strong> 
    - <small><%= job.business %></small>
  </li>
  <% end %>
</ul>

